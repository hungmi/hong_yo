<div class="card-body ">
	<%= form_for [:admin, story] do |f| %>
		<div class="form-group bmd-form-group">
			<%= f.label :title, class: "bmd-label-floating" %>
			<%= f.text_area :title, class: "form-control", rows: 3 %>
		</div>
		<div class="form-group bmd-form-group">
			<%= f.label :content, class: "bmd-label-floating" %>
			<%= f.text_area :content, class: "form-control", rows: 5 %>
		</div>
		<div class="form-group bmd-form-group">
			<div class="togglebutton">
		  	<label>
		  			<%= f.check_box :status, {}, "published", "draft" %>
	          <span class="toggle bg-rose"></span>
	            上架至前台
		  	</label>
		  </div>
		</div>
	<% end %>
</div>
<div class="card-footer ">
	<%= submit_tag :submit, class: "btn btn-fill btn-rose", form: dom_id(@story, :edit) %>
</div>