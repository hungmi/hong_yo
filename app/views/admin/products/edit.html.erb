<div class="card">
	<div class="card-header card-header-danger card-header-icon">
		<div class="card-icon">
			<i class="material-icons">store</i>
		</div>
		<%= link_to admin_categories_path, data: { turbolinks: false } do %>
			<div class="card-icon rounded-circle float-right subBtn ml-3">
				<i class="material-icons">category</i>
			</div>
		<% end %>
		<h4 class="card-title"><%= I18n.t("text.#{action_name}") %><%= Product.model_name.human %></h4>
	</div>
	<%= render "form", product: @product %>
</div>