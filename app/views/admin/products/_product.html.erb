<tr>
	<td></td>
	<td class="truncate"><%= product.category.name %></td>
	<td class="truncate"><%= product.name %></td>
	<td><%= simple_format product.description.to_s.truncate(120) %></td>
	<td>
		<span class="badge<%= product.published? ? ' btn-brand' : ' btn-secondary' %>"><%= I18n.t("activerecord.product_status.#{product.status}") %></span>
	</td>
	<td class="text-right">
		<%= link_to edit_admin_product_path(product), class: "btn btn-link btn-primary btn-just-icon" do %>
			<i class="material-icons">edit</i>
		<% end %>
		<%= link_to admin_product_path(product), method: :delete, data: { confirm: I18n.t("text.confirm_destroy") }, class: "btn btn-link btn-danger btn-just-icon" do %>
			<i class="material-icons">delete_forever</i>
		<% end %>
	</td>
</tr>