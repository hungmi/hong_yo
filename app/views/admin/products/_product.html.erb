<tr>
	<td></td>
	<td class="truncate"><%= product.category.ancestors_names %></td>
	<td class="truncate"><%= product.admin_name %></td>
	<td><%= simple_format product.description.to_s.truncate(120) %></td>
	<td>
		<span class="badge<%= product.published? ? ' btn-brand' : ' btn-secondary' %>"><%= I18n.t("activerecord.product_status.#{product.status}") %></span>
	</td>
	<td class="text-right">
		<%= link_to edit_admin_product_path(product), class: "btn btn-link btn-primary btn-just-icon" do %>
			<i class="material-icons">edit</i>
		<% end %>
		<%= link_to admin_product_path(product), method: :delete, data: { confirm: "這會刪除產品資料，並且無法復原。若這是主要產品，同時也會刪除它的所有複製品。真的要繼續嗎？" }, class: "btn btn-link btn-danger btn-just-icon" do %>
			<i class="material-icons">delete_forever</i>
		<% end %>
	</td>
</tr>