							<p class="card-category">產品數量</p>
							<h3 class="card-title"> <%= Product.all.size %>
								<small>個</small>
							</h3>
						</div>
						<div class="card-footer">
							<div class="stats">
								<i class="material-icons">update</i> <%= Product.order(updated_at: :desc).first.updated_at.strftime("%F") %>
							</div>
						</div>
					</div>
				<% end %>
			</div>
			<div class="col-lg-3 col-md-6 col-sm-6">
				<%= link_to admin_stories_path do %>
					<div class="card card-stats">
						<div class="card-header card-header-info card-header-icon">
							<div class="card-icon">
								<i class="material-icons">info_outline</i>
							</div>
							<p class="card-category">消息總計</p>
							<h3 class="card-title"><%= Story.all.size %>
								<small>則</small>
							</h3>
						</div>
						<div class="card-footer">
							<div class="stats">
								<i class="material-icons">update</i> <%= Story.order(updated_at: :desc).first.updated_at.strftime("%F") %>
							</div>
						</div>
					</div>
				</div>
			<% end %>
			<div class="col-lg-3 col-md-6 col-sm-6">
				<div class="card card-stats">
					<div class="card-header card-header-primary card-header-icon">
						<div class="card-icon">
							<i class="material-icons">cloud</i>
						</div>
						<p class="card-category">網站運行</p>
						<h3 class="card-title"><%= (Time.zone.today - Date.new(2018,6,1)).to_i %>
							<small>天</small>
						</h3>
					</div>
					<div class="card-footer">
						<div class="stats">
							<i class="material-icons">update</i> <%= Time.zone.today %>
						</div>
					</div>
				</div>
			</div>
