<section class="latest-news-section d-flex align-content-end flex-column">
	<div class="align-self-center animated fadeInDown fast">
		<img src="/img/about/latest_news.svg" height="60px">
	</div>
	<% per = browser.mobile? ? 1 : 4 %>
	<% @stories.each_slice(per).with_index do |news_per, index| %>
		<div class="news-group js-news-group <%= 'active' if index == 0 %>" data-page="<%= index + 1 %>">
			<% news_per.each_with_index do |news, delay| %>
				<a href="<%= story_path(news) %>" class="news animated">
					<div class="news__img">
						<%= image_tag news.try_cover, alt: news.title, class: "img-fluid" %>
					</div>
					<div class="news__date-title">
						<p class="news__date v400"><%= news.date.strftime("%Y. %m. %d") %></p>
						<h5 class="news__title v400 mb-0">
							<%= render_chinese_class_loop(news.title) %>		
						</h5>
					</div>
				</a>
			<% end %>
		</div>
	<% end %>
	<div class="dots d-flex justify-content-center">
		<% @stories.each_slice(per).with_index do |news_per, index| %>
			<div class="dot js-dot <%= 'active' if index == 0 %>" data-page="<%= index + 1 %>">
				<div class="dot__bg"></div>
			</div>	
		<% end %>
	</div>
</section>

