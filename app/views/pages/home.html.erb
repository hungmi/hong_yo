						<div class="section_title">
							<h2 class="v700"><%= root.name %></h2>
						</div>
					</div>
					<div class="paragraph_wrapper">
						<%= simple_format root.description, class: "v300 mb-3" %>
					</div>
				</div>
				<a href="<%= products_path %>" id="see_more_btn" class="d-flex">
					<div class="mr-auto align-self-center see_more_text v700">SEE MORE</div><div class="align-self-center" id="triangle-right"></div>
				</a>
			</div>
		</div>
	<% end %>
