<a href="/contact" id="contact_btn" class="text-right">
	<%= image_tag "/img/contact.svg", height: '100px'; %>
</a>
<div id="full_bg" class="text-center w-100">
	<img src="/img/products/products_bg.png" alt="" height="100%" width="auto">
</div>
<section id="products_finder_section" class="d-flex align-content-end flex-column">
	<div id="products_finder_wrapper" class="d-flex">
		<div id="left_product_finder_wrapper">
			<div class="product_finder_title d-flex">
				<img src="/img/products/search.svg" alt="search" width="33px" height="33px" id="search_product_icon">
				<div class="product_finder_title_text">
					<h2 class="v700 mb-0">PRODUCT FINDER</h2>
					<p class="v300">find the product you need</p>
				</div>
			</div>
			<div class="product_finder_form_wrapper">
				<%= form_for :product do |f| %>
					<label for="product_category" class="v300">
					  Product Classication
					  <%= f.select :category, Category.roots.map { |c| [c.name, c.id] }, {}, class: "form-control v700" %>
					  <!-- <select name="product[category]" id="product_category" class="form-control v700">
							<option value="1">01 Life Science Animal Science</option>
						</select> -->
					</label>
					<div class="two_selects_wrapper d-flex">
						<label for="product_brand" class="v300">
						  Brand
						  <%= select_tag :product_brand, options_from_collection_for_select(Category.roots.first.children, "id", "name"), class: 'form-control v700' %>
						  <!-- <select name="product[brand]" id="product_brand" class="form-control v700">
								<option value="1">-</option>
							</select> -->
						</label>
						<label for="product_series" class="v300">
						  Series
						  <select name="product[series]" id="product_series" class="form-control v700">
								<option value="1">-</option>
							</select>
						</label>
					</div>
				<% end %>
			</div>
		</div>
		<div id="right_product_info_wrapper" class="d-flex align-content-end flex-column align-self-right">
			<div class="d-flex number_title_wrapper mt-auto">
				<div class="section_number d-flex">
					<h2 class="v700 align-self-center">01</h2>
				</div>
				<div class="section_title">
					<h2 class="v700">LIFE SCIENCE</h2>
					<h2 class="v700">ANIMAL SCIENCE</h2>
				</div>
			</div>
			<div class="paragraph_wrapper">
				<p class="v300">
					Sales of various laboratory equipment and supplies
					<br><br>
					Such as DNA nucleic acid amplification (PCR), carbon dioxide / three-gas incuba- tor, centrifuges, dry bath, biosafety operation cabinets, ultra-low temperature refrigerators, acid and alkali analyzers, electrophoresis equipment, autoclaves, pure water manufacturing machines, Multifunctional liquid separator, digital type refractive index meter, ABBE folding device, polarimeter, ultrasonic cleaner, agitator, balance, various types of analyzers and measuring devices, PVC gloves, glass products, filter membrane, PH test paper, Needle filters, as well as a variety of plastic products and many other products.
				</p>
			</div>
		</div>
	</div>
</section>
