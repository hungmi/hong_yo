<%= link_to product_path(id: product), class: "product_wrapper" do %>
	<% if product.images.attached? %>
		<div class="product_img" style='background: url("<%= rails_blob_path(product.images.first) %>") no-repeat center; background-size: contain;'></div>
	<% else %>
		<div class="product_img"></div>
	<% end %>
	<span class="product_brand_series">
		<span class="product_brand">ASTEC</span> - <span class="product_series">滅菌型培養箱</span>
	</span>
	<h3 class="product_name"><%= product.name %></h3>
<% end %>