	<%= link_to product_path(id: product), class: "product" do %>
		<% if product.t_images.attached? %>
			<div class="product__img" style='background: url("<%= rails_blob_path(product.t_images.first) %>") no-repeat center; background-size: contain;'></div>
		<% else %>
			<div class="product__img"></div>
		<% end %>
		<span class="product__category">
			<span class="product__category--brand"><%= product.category.parent.name %></span> - <span class="product__category--series"><%= product.category.name %></span>
		</span>
		<h3 class="product__name"><%= product.name %></h3>
	<% end %>